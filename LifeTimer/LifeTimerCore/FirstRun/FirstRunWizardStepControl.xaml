<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="LifeTimer.FirstRun.FirstRunWizardStepControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LifeTimer.FirstRun"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  
    mc:Ignorable="d"
    x:Name="Root"
    >

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>

   

        <Image Grid.Row="0" Source="{Binding Step.ImagePath, ElementName=Root}" Margin="0,10,0,10"/>

  


         <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                <TextBlock Text="{Binding Step.Description, ElementName=Root}" TextWrapping="Wrap" FontSize="16" Margin="0,5,0,20"/>
            </StackPanel>



    </Grid>
</UserControl>
