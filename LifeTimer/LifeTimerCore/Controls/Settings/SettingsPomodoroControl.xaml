<UserControl
    x:Class="LifeTimer.Controls.Settings.SettingsPomodoroControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:componentcontrols="using:LifeTimer.Controls.Settings.Components"
            xmlns:layoutcontrols="using:LifeTimer.Controls.Layout"

    >

    <layoutcontrols:SettingsGroupControl HorizontalContentAlignment="Stretch">
        <layoutcontrols:SettingsGroupControl.CustomContent>


            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
        
           

        <componentcontrols:SettingsNumericFieldControl 
           Grid.Column="1"
            x:Name="PomodoroMinutes"
            Title="Pomodoro Minutes"
            Subtitle="Sets the length of a Pomodoro session in minutes"
            Minimum="1"
            Maximum="60"
            Value="1"
            OnValueChanged="PomodoroMinutes_OnValueChanged"
            >

        </componentcontrols:SettingsNumericFieldControl>



    </StackPanel>
        </layoutcontrols:SettingsGroupControl.CustomContent>
    </layoutcontrols:SettingsGroupControl>

</UserControl>