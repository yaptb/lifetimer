<UserControl
    x:Class="LifeTimer.Controls.Layout.SidenavItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >



    <Button x:Name="NavigationButton"
            Background="Transparent"
            BorderThickness="1"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Left"
            Padding="8,4"
            PreviewKeyDown="NavigationButton_PreviewKeyDown" 
            >

<!--
        <Button.Resources>
            <StaticResource x:Key="ButtonBorderBrushPressed" ResourceKey="AccentFillColorDefaultBrush"/>
        </Button.Resources>
-->
        <TextBlock x:Name="TitleTextBlock"
              Text="{x:Bind Title, Mode=OneWay}"
              FontSize="10"
           />
    </Button>


</UserControl>