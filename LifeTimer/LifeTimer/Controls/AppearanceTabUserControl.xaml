<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="LifeTimer.Controls.AppearanceTabUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LifeTimer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:layoutcontrols="using:LifeTimer.Controls.Layout"
    xmlns:settingscontrols="using:LifeTimer.Controls.Settings"
    >

    <layoutcontrols:SidenavTabLayout>
        <layoutcontrols:SidenavTabLayout.CustomContent>

            
      
            
            <StackPanel>

                <layoutcontrols:SettingsGroupControl HorizontalContentAlignment="Stretch">
                    <layoutcontrols:SettingsGroupControl.CustomContent>
                        <settingscontrols:SettingsAppearanceControl></settingscontrols:SettingsAppearanceControl>
                    </layoutcontrols:SettingsGroupControl.CustomContent>
                </layoutcontrols:SettingsGroupControl>

               <!--
                <layoutcontrols:SettingsGroupControl HorizontalContentAlignment="Stretch">
                    <layoutcontrols:SettingsGroupControl.CustomContent>
                        <settingscontrols:SettingsUrlRotationControl></settingscontrols:SettingsUrlRotationControl>
                    </layoutcontrols:SettingsGroupControl.CustomContent>
                </layoutcontrols:SettingsGroupControl>

                               -->

            </StackPanel>

        </layoutcontrols:SidenavTabLayout.CustomContent>
    </layoutcontrols:SidenavTabLayout>

</UserControl>
