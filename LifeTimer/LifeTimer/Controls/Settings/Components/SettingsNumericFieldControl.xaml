<UserControl
    x:Class="LifeTimer.Controls.Settings.Components.SettingsNumericFieldControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0" VerticalAlignment="Center">
            <TextBlock x:Name="TitleTextBlock"
                       x:Uid="SettingsNumericFieldControl_TitleTextBlock"
                       FontWeight="Medium" />
            <TextBlock x:Name="SubtitleTextBlock"
                       x:Uid="SettingsNumericFieldControl_SubtitleTextBlock"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       FontSize="10"
                       Margin="2,0,8,0"
                       />
        </StackPanel>
        
        <TextBox x:Name="ValueTextBox"
                 Grid.Column="1"
                 Width="80"
                 VerticalAlignment="Center"
                 Text="86400"
                 TextChanged="ValueTextBox_TextChanged"
                 LostFocus="ValueTextBox_LostFocus" 
                 />
    </Grid>
</UserControl>