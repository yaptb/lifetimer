<UserControl
    x:Class="LifeTimer.Controls.Settings.Components.SettingsSliderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="0,0,0,0">
            <TextBlock x:Name="TitleTextBlock"
                       x:Uid="SettingsSliderControl_TitleTextBlock"
                       FontWeight="Medium"
                       FontSize="12"
                        Margin="0"
                       />
            <TextBlock x:Name="SubtitleTextBlock"
                       x:Uid="SettingsSliderControl_SubtitleTextBlock"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       FontSize="10"
                       Margin="2,0,8,0"

                       />
        </StackPanel>
        
        <Slider x:Name="ValueSlider"
                Grid.Row="1"
                Minimum="0"
                Maximum="100"
                StepFrequency="1"
                Value="50"
                ValueChanged="ValueSlider_ValueChanged" />
    </Grid>
</UserControl>