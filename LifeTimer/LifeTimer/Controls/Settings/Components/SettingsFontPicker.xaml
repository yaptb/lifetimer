<UserControl
    x:Class="LifeTimer.Controls.Settings.Components.SettingsFontPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Spacing="8" MinWidth="600">

        <!-- Title and Description 
        <StackPanel Margin="4">
            <TextBlock x:Name="TitleTextBlock"
                       Text="Font Family"
                       FontWeight="Medium"
                       FontSize="12"
                       Margin="0,0,0,2" />
            <TextBlock x:Name="DescriptionTextBlock"
                       Text="Select a font family"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       FontSize="10" />
        </StackPanel>
-->
        <!-- Font Selection and Preview Container -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Font Controls Grid -->
            <Grid Grid.Row="0" Margin="0,12,0,12" MinWidth="500" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Font Family -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Font:" VerticalAlignment="Center" FontSize="11" Margin="0,0,8,0" />
                <ComboBox x:Name="FontComboBox"
                          
                          Grid.Row="0" Grid.Column="1"
                          FontSize="11"
                          SelectionChanged="FontComboBox_SelectionChanged"
                          PlaceholderText="Choose a font..."
                          Width="200">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontFamily="{Binding}" FontSize="14" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Font Weight -->
                <TextBlock Grid.Row="0" Grid.Column="3" Text="Weight:" VerticalAlignment="Center" FontSize="11" Margin="12,0,8,0" />
                <ComboBox x:Name="FontWeightComboBox"
                          Grid.Row="0" Grid.Column="4"
                          SelectionChanged="FontWeightComboBox_SelectionChanged"
                          FontSize="11" />

                <!-- Font Size -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Size:" VerticalAlignment="Center" FontSize="11" Margin="0,8,8,0" />
                <NumberBox x:Name="FontSizeNumberBox"
                           Grid.Row="1" Grid.Column="1"
                           HorizontalAlignment="Left"
                           Width="150"
                           Minimum="6"
                           Maximum="200"
                           Value="14"
                           SpinButtonPlacementMode="Inline"
                           ValueChanged="FontSizeNumberBox_ValueChanged"
                           FontSize="11"
                           Margin="0,8,0,0" />

                <!-- Font Style -->
                <TextBlock Grid.Row="1" Grid.Column="3" Text="Style:" VerticalAlignment="Center" FontSize="11" Margin="12,8,8,0" />
                <ComboBox x:Name="FontStyleComboBox"
                          Grid.Row="1" Grid.Column="4"
                          SelectionChanged="FontStyleComboBox_SelectionChanged"
                          FontSize="11"
                          Margin="0,8,0,0" />
            </Grid>

            <!-- Font Preview -->
            <Border Grid.Row="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="16,12"
                    Margin="0,8,0,0"
                    MinHeight="60">
                <StackPanel>
                    <TextBlock x:Name="PreviewTextBlock"
                               Text="The quick brown fox jumps over the lazy dog"
                               FontSize="16"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Left" />
                    <TextBlock x:Name="FontInfoTextBlock"
                               Text="Font: Segoe UI"
                               FontSize="10"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Margin="0,4,0,0" />
                </StackPanel>
            </Border>
        </Grid>


    </StackPanel>
</UserControl>