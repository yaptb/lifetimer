<UserControl
    x:Class="LifeTimer.Controls.Settings.SettingsAppearanceBorderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="using:LifeTimer.Controls.Settings.Components">

    <Grid x:Name="BorderAppearanceUI" HorizontalAlignment="Stretch">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Border Color -->
        <StackPanel Grid.Column="0" Grid.Row="0" Margin="4">
            <TextBlock x:Name="BorderColorTextBlock"
                       Text="Border Color"
                       FontWeight="Medium"
                       FontSize="12"
                       Margin="0"
                       />
            <TextBlock x:Name="BorderColorDescriptionTextBlock"
                       Text="Set the color of the window border"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       FontSize="10"
                       Margin="2,0,8,0"
                       />
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="0" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button x:Name="BorderColorButton"
                    Content="Set"
                    Click="BorderColorButton_Click"
                    />
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="0" Margin="4" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border x:Name="BorderColorPreview"
                    Width="60"
                    Height="30"
                    CornerRadius="4"
                    BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    HorizontalAlignment="Left"
                    Margin="0,8,0,0">
                <Border.Background>
                    <SolidColorBrush x:Name="BorderColorBrush" Color="White" />
                </Border.Background>
            </Border>
        </StackPanel>

        <!-- Border Thickness -->
        <StackPanel Grid.Column="0" Grid.Row="1" Margin="4">
            <TextBlock x:Name="BorderThicknessTextBlock"
                       Text="Border Thickness"
                       FontWeight="Medium"
                       FontSize="12"
                       Margin="0"
                       />
            <TextBlock x:Name="BorderThicknessDescriptionTextBlock"
                       Text="Thickness of the border in pixels"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       FontSize="10"
                       Margin="2,0,8,0"
                       />
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center">
            <components:SettingsNumericFieldControl x:Name="BorderThicknessField"
                                                     Title=""
                                                     Subtitle=""
                                                     Minimum="0"
                                                     Maximum="50"
                                                     OnValueChanged="BorderThicknessField_ValueChanged" />
        </StackPanel>

        <!-- Border Radius -->
        <StackPanel Grid.Column="0" Grid.Row="2" Margin="4">
            <TextBlock x:Name="BorderRadiusTextBlock"
                       Text="Border Radius"
                       FontWeight="Medium"
                       FontSize="12"
                       Margin="0"
                       />
            <TextBlock x:Name="BorderRadiusDescriptionTextBlock"
                       Text="Radius of the border corners in pixels"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       FontSize="10"
                       Margin="2,0,8,0"
                       />
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center">
            <components:SettingsNumericFieldControl x:Name="BorderRadiusField"
                                                     Title=""
                                                     Subtitle=""
                                                     Minimum="0"
                                                     Maximum="100"
                                                     OnValueChanged="BorderRadiusField_ValueChanged" />
        </StackPanel>

    </Grid>

</UserControl>
