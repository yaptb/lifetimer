<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="LifeTimer.Controls.Settings.SettingsPositionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LifeTimer.Controls.Settings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
           xmlns:layoutcontrols="using:LifeTimer.Controls.Layout"
    >




            <Grid >

                            
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"></ColumnDefinition>
                    <ColumnDefinition Width="30"></ColumnDefinition>
                    <ColumnDefinition Width="30"></ColumnDefinition>
                    <ColumnDefinition Width="30"></ColumnDefinition>
                    <ColumnDefinition Width="50"></ColumnDefinition>
                    <ColumnDefinition Width="30"></ColumnDefinition>
                    <ColumnDefinition Width="50"></ColumnDefinition>
                    <ColumnDefinition Width="30"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>



                <Grid.Resources>
                    <ResourceDictionary Source="ms-appx:///Microsoft.UI.Xaml/DensityStyles/Compact.xaml">
                        <Style TargetType="TextBlock">
                            <Setter Property="Margin" Value="2" />
                            <Setter Property="Padding" Value="4" />
                            <Setter Property="FontSize" Value="10" />
<!--                            <Setter Property="FontStyle" Value="Italic" /> -->
                        </Style>
                    </ResourceDictionary>
                </Grid.Resources>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="8" HorizontalAlignment="Left"
                           FontSize="12"
                           FontWeight="Medium"
                           x:Uid="SettingsPositionControl_BrowserWindowLabel"/>

                <TextBlock Grid.Row="1" Grid.Column="0"  HorizontalAlignment="Right" x:Uid="SettingsPositionControl_XLabel"/>

                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="XPos"
                             Foreground="{ThemeResource TextFillColorSecondaryBrush}">9999</TextBlock>

                <TextBlock Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right" x:Uid="SettingsPositionControl_YLabel"/>

                <TextBlock Grid.Row="1" Grid.Column="3" x:Name="YPos"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}">9999</TextBlock>

                <TextBlock Grid.Row="1" Grid.Column="4" HorizontalAlignment="Right" x:Uid="SettingsPositionControl_WidthLabel"/>

                <TextBlock Grid.Row="1" Grid.Column="5" x:Name="Width"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}">9999</TextBlock>

                <TextBlock Grid.Row="1" Grid.Column="6" HorizontalAlignment="Right" x:Uid="SettingsPositionControl_HeightLabel"/>

                <TextBlock Grid.Row="1" Grid.Column="7" x:Name="Height"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}">9999</TextBlock>


            </Grid>

    <!--
    <layoutcontrols:SettingsGroupControl HorizontalContentAlignment="Stretch">
        <layoutcontrols:SettingsGroupControl.CustomContent>

        </layoutcontrols:SettingsGroupControl.CustomContent>
    </layoutcontrols:SettingsGroupControl>

    -->
</UserControl>
