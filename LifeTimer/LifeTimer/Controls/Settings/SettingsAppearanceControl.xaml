<UserControl
    x:Class="LifeTimer.Controls.Settings.SettingsAppearanceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="using:LifeTimer.Controls.Settings.Components"
    >

    <Grid x:Name="AppearanceUI" HorizontalAlignment="Stretch" >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
        </Grid.RowDefinitions>
    
        <!-- Title Font -->
        <StackPanel Grid.Column="0" Grid.Row="0" Margin="4">
            <TextBlock x:Name="TitleTextBlock"
                       Text="Title Font"
                       FontWeight="Medium" 
                       FontSize="12"
                       Margin="0"
                       />
            <TextBlock x:Name="TitleDescriptionTextBlock"
                       Text="Set the style for the timer display title"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       FontSize="10"
                       Margin="2,0,8,0"
                       />
        </StackPanel>


        <StackPanel Grid.Column="2" Grid.Row="0" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button x:Name="TitleFontButton"
                Content="Set"
                Click="TitleFontButton_Click"
                    />
        </StackPanel>


        <StackPanel Grid.Column="1" Grid.Row="0" Margin="4" HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock x:Name="TitleFontPreview"
                               Text="Sample Title Text"
                               FontSize="18"
                               Margin="0,0,0,0" />
        </StackPanel>




        <!-- Timer Font -->
        <StackPanel Grid.Column="0" Grid.Row="1" Margin="4">
            <TextBlock x:Name="TimerTitleTextBlock"
                       Text="Timer Font"
                       FontWeight="Medium" 
                       FontSize="12"
                       Margin="0"
                       />
            <TextBlock x:Name="TimerDescriptionTextBlock"
                       Text="Set the style for the timer display"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       FontSize="10"
                       Margin="2,0,8,0"
                       />
        </StackPanel>


        <StackPanel Grid.Column="2" Grid.Row="1" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button x:Name="TimerFontButton"
                  Content="Set"
            Click="TimerFontButton_Click"
                    />
        </StackPanel>


        <StackPanel Grid.Column="1" Grid.Row="1" Margin="4" HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock x:Name="TimerFontPreview"
                Text="00:15:30"
                FontSize="36"
                Margin="0,8,0,0" />
        </StackPanel>


        <!-- Foreground -->
        <StackPanel Grid.Column="0" Grid.Row="2" Margin="4">
            <TextBlock x:Name="ForegroundTextBlock"
                       Text="Foreground Color"
                       FontWeight="Medium" 
                       FontSize="12"
                       Margin="0"
                       />
            <TextBlock x:Name="ForegroundDescriptionTextBlock"
                       Text="Set the foreground color for the display"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       FontSize="10"
                       Margin="2,0,8,0"
                       />
        </StackPanel>


        <StackPanel Grid.Column="2" Grid.Row="2" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center">

            <Button x:Name="ForegroundColorButton"
                  Content="Set"
              Click="ForegroundColorButton_Click"
                    />

        </StackPanel>


        <StackPanel Grid.Column="1" Grid.Row="2" Margin="4" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Border x:Name="ForegroundColorPreview"
         Width="60"
         Height="30"
         CornerRadius="4"
         BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
         BorderThickness="2"
         HorizontalAlignment="Left"
         Margin="0,8,0,0">
                <Border.Background>
                    <SolidColorBrush x:Name="ForegroundColorBrush" Color="White" />
                </Border.Background>
            </Border>
        </StackPanel>



        <!-- Background -->
        <StackPanel Grid.Column="0" Grid.Row="3" Margin="4">
            <TextBlock x:Name="BackgroundTextBlock"
                       Text="Background Color"
                       FontWeight="Medium" 
                       FontSize="12"
                       Margin="0"
                       />
            <TextBlock x:Name="BackgroundDescriptionTextBlock"
                       Text="Set the background color for the display"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       FontSize="10"
                       Margin="2,0,8,0"
                       />
        </StackPanel>


        <StackPanel Grid.Column="2" Grid.Row="3" Margin="4" HorizontalAlignment="RIght" VerticalAlignment="Center">

            <Button x:Name="BackgroundColorButton"
                  Content="Set"
                  Click="BackgroundColorButton_Click"
                    />

        </StackPanel>


        <StackPanel Grid.Column="1" Grid.Row="3" Margin="4" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Border x:Name="BackgroundColorPreview"
          Width="60"
          Height="30"
          CornerRadius="4"
          BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
          BorderThickness="2"
          HorizontalAlignment="Left"
          Margin="0,8,0,0">
                <Border.Background>
                    <SolidColorBrush x:Name="BackgroundColorBrush" Color="Black" />
                </Border.Background>
            </Border>
        </StackPanel>







